@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1 style="color:black">BookClub</h1>
    <p style="color:black" class="lead">BookClub is a Web App designed to help manage your Bookclub</p>
</div>

<div class="row">
    <div class="col-md-3">
        <h2>Welcome to the BookClub</h2>
        <p>
            BookClub is designed to assist in the management of the membership and administration of Book Clubs and share information about books and groups
        </p>
        <p><a class="btn btn-default" href="@Url.Action("About", "Home")">Learn more &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>BookClub Services</h2>
        <p>Book Club Admin can create and edit a BookClub Profile. Book Club members can view Book Club Data</p>
        <p><a class="btn btn-default" href="@Url.Action("Create", "BookClub")">New BookClub &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>BookClub Member Services</h2>
        <p>Join your chosen BookClub</p>
        <p><a class="btn btn-default" href="@Url.Action("Create", "BookClubMember")">New BookClubMember &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Library Services</h2>
        <p>Create edit or link a Library Profile to a BookClub. Book Club admin and members can view Library Data</p>
        <p><a class="btn btn-default" href="@Url.Action("Create", "Library")">New Library &raquo;</a></p>
    </div>
</div>